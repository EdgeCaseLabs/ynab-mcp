# YNAB MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your YNAB Personal Access Token
# Get your token from: https://app.ynab.com/settings/developer
YNAB_API_KEY=your_ynab_api_key_here

# Optional: Default budget ID to use when not specified
# You can find budget IDs by using the get_budgets tool
# Leave empty to use "last-used" as default
DEFAULT_BUDGET_ID=

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: MCP Server Name
MCP_SERVER_NAME=YNAB MCP Server

# Optional: Port for HTTP transport (if using HTTP instead of stdio)
# MCP_HTTP_PORT=8080